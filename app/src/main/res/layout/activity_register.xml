<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:id="@+id/activity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:elevation="4dp"
        android:background="@color/ColorPrimary">
        <TextView
            android:id="@+id/customTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Register"
            android:textSize="25dp"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <com.hooper.registrationscreen.circleview.CircularImageView
                android:id="@+id/profilePictureCircleView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_launcher"
                app:siBorderWidth="4dp"
                app:siBorderAlpha="0.5"
                app:siBorderColor="@color/bordercolor"
                android:alpha="1"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/LinearLayout1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/nameLabel"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="8dp"
                    android:text="Name   :"
                    android:textSize="17dp"
                    android:layout_gravity="bottom" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/img_bg_edit_text"
                    android:ems="10"
                    android:id="@+id/profileName"
                    android:gravity="center"
                    android:hint="Profile Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:id="@+id/LinearLayout2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/textView4"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="8dp"
                    android:text="Mobile :"
                    android:textSize="17dp"
                    android:layout_gravity="bottom" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/mobileNumber"
                    android:background="@drawable/img_bg_edit_text"
                    android:layout_marginLeft="8dp"
                    android:maxLength="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="Phone Number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/LinearLayout3"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/designationLabel"
                    android:layout_marginTop="15dp"
                    android:text="Designation:"
                    android:textSize="17dp"
                    android:layout_marginRight="5dp"/>

                <Spinner
                    android:id="@+id/designationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:popupBackground="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/LinearLayout4"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/joiningDateLabel"
                    android:text="Joining Date:"
                    android:layout_marginRight="5dp"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/dateTextView"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"/>
            </LinearLayout>

            <DatePicker
                android:id="@+id/joiningDatePicker"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:background="@drawable/img_bg_edit_text"
                android:datePickerMode="spinner"
                android:minDate="1-1-1990"
                android:maxDate="31-12-2050"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:calendarViewShown="false" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:id="@+id/LinearLayout5"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_style"
                    android:textColor="@color/white"
                    android:layout_marginRight="6dp"
                    android:id="@+id/addMember"
                    android:text="Add"
                    android:layout_weight="0.10" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_style"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/cancelRegister"
                    android:textColor="@color/white"
                    android:text="Back"
                    android:layout_weight="0.10" />
            </LinearLayout>
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
